<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <!-- Text -->
    <style name="BaseTheme.Text">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="BaseTheme.DisableText">
        <item name="android:textColor">@color/primaryDisableTextColor</item>
    </style>

    <style name="BaseTheme.Text.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseTheme.Text.15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BaseTheme.DisableText.15">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
