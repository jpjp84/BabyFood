<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Popup" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored" />

    <style name="FullscreenDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- View Styles -->
    <!-- Text -->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DisableText">
        <item name="android:textColor">?attr/colorDisableText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Backdrop">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
