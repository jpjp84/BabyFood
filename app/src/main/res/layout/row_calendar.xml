<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.graphics.Color" />

        <variable
            name="day"
            type="com.jp.babyfood.data.entity.Day" />

        <variable
            name="viewModel"
            type="com.jp.babyfood.ui.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryLightColor"
        android:onClick="@{ (view) -> day.date == null ? void : viewModel.openCalendarDetail(day)}"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/calendar_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{String.valueOf(day.getDateToClass())}"
            android:textColor="@{day.disable ? @color/primaryDisableTextColor : @color/primaryTextColor}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{Color.parseColor(day.foods.size() >= 1 ? day.foods.get(0).color : `#00000000`)}"
            android:gravity="center"
            android:text="@{day.foods.size() >= 1 ? day.foods.get(0).title: ``}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{Color.parseColor(day.foods.size() >= 2 ? day.foods.get(1).color : `#00000000`)}"
            android:gravity="center"
            android:text="@{day.foods.size() >= 2 ? day.foods.get(1).title: ``}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{Color.parseColor(day.foods.size() >= 3 ? day.foods.get(2).color : `#00000000`)}"
            android:gravity="center"
            android:text="@{day.foods.size() >= 3 ? day.foods.get(2).title: ``}" />

    </LinearLayout>
</layout>