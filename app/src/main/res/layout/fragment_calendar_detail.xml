<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="viewModel"
            type="com.jp.babyfood.ui.calendardetail.CalendarDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ScrollingActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <ImageView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxHeight="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_sample"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin">

                    <Space
                        android:id="@+id/toolbar_holder"
                        android:layout_width="100dp"
                        android:layout_height="?attr/actionBarSize" />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9f000000"
            android:hint="@string/food_title_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="@dimen/default_padding"
            android:singleLine="true"
            android:textColor="@color/primaryTextLightColor"
            android:textColorHint="@color/secondaryTextLightColor"
            android:textSize="@dimen/text_title"
            app:collapsedTarget="@id/toolbar_holder"
            app:collapsedTextSize="@dimen/text_system_default"
            app:layout_behavior=".util.CollapsingEditTextBehavior" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.jp.babyfood.ui.main.MainActivity"
            tools:showIn="@layout/activity_main">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/contentBackgroundColor">

                <TextView
                    android:id="@+id/ingredient_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_padding"
                    android:background="@drawable/bg_row_ingredient"
                    android:paddingTop="@dimen/default_padding"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="@string/ingredient_list_title"
                    android:textSize="@dimen/text_subtitle"
                    app:layout_constraintBottom_toTopOf="@id/ingredient_list"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ingredient_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    app:bind_items="@{viewModel.ingredients}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/ingredient_allergy_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ingredient_allergy_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_padding"
                    android:background="@drawable/bg_row_ingredient"
                    android:paddingTop="@dimen/default_padding"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="@string/ingredient_allergy_title"
                    android:textSize="@dimen/text_subtitle"
                    app:layout_constraintBottom_toTopOf="@id/ingredient_allergy_radiogroup"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ingredient_list" />

                <com.jp.babyfood.util.GridRadioGroup
                    android:id="@+id/ingredient_allergy_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:padding="@dimen/default_padding"
                    app:layout_constraintBottom_toTopOf="@id/ingredient_comment_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ingredient_allergy_text">

                    <RadioButton
                        android:id="@+id/ingredient_allergy_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="@string/ingredient_allergy" />

                    <RadioButton
                        android:id="@+id/ingredient_emesis_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="@string/ingredient_emesis" />

                    <RadioButton
                        android:id="@+id/ingredient_diarrhea_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="@string/ingredient_diarrhea" />
                </com.jp.babyfood.util.GridRadioGroup>

                <TextView
                    android:id="@+id/ingredient_comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/default_padding"
                    android:background="@drawable/bg_row_ingredient"
                    android:paddingTop="@dimen/default_padding"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="@string/ingredient_comment_title"
                    android:textSize="@dimen/text_subtitle"
                    app:layout_constraintBottom_toTopOf="@id/ingredient_comment_edit"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ingredient_allergy_radiogroup" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ingredient_comment_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:background="@color/baseBackgroundColor"
                    android:gravity="top"
                    android:hint="@string/ingredient_comment_hint"
                    android:maxLength="200"
                    android:minLines="5"
                    android:text="@={viewModel.food.comment}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ingredient_comment_text" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ingredient_save_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/default_padding"
            android:onClick="@{view -> viewModel.saveIngredients()}"
            android:padding="@dimen/padding_button"
            android:text="@string/save"
            android:textColor="@color/secondaryLightColor"
            app:cornerRadius="@dimen/default_corner"
            app:rippleColor="#33AAAAAA" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>