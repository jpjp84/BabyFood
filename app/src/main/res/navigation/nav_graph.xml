<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jp.babyfood.ui.home.HomeFragment"
        android:label="Baby Food">

        <action
            android:id="@+id/action_homeFragment_to_dayListFragment"
            app:destination="@id/dayListFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.jp.babyfood.ui.history.HistoryFragment"
        android:label="History" />

    <fragment
        android:id="@+id/dayListFragment"
        android:name="com.jp.babyfood.ui.daylist.DayListFragment"
        android:label="List">
        <action
            android:id="@+id/action_dayListFragment_to_calendarDetailFragment"
            app:destination="@id/calendarDetailFragment" />
        <argument
            android:name="day"
            app:argType="com.jp.babyfood.data.entity.Day" />
    </fragment>

    <dialog
        android:id="@+id/calendarDetailFragment"
        android:name="com.jp.babyfood.ui.calendardetail.CalendarDetailFragment"
        android:label="Add Day">
        <argument
            android:name="food"
            android:defaultValue="@null"
            app:argType="com.jp.babyfood.data.entity.Food"
            app:nullable="true" />
    </dialog>

    <argument
        android:name="userMessage"
        android:defaultValue="0" />
</navigation>
